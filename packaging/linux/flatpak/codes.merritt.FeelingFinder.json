          "sha256": "925fda4ee770eaa6dc9aacdc86892b05a6182430d8ddfde9fbab59230ee7af78",
          "tag": null
        },
        {
          "type": "git",
          "url": "https://github.com/Merrit/feeling_finder.git",
          "sha256": null,
          "tag": "v0.2.2"
        },
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}