{
  "app-id": "codes.merritt.FeelingFinder",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "feeling_finder",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio",
    "--share=network"
  ],
  "modules": [
    {
      "name": "feeling_finder",
      "buildsystem": "simple",
      "only-arches": [
        "x86_64"
      ],
      "build-commands": [
        "cp -r packaging/linux/flatpak/build-flatpak.sh .",
        "cp -r packaging/linux/flatpak/codes.merritt.FeelingFinder.metainfo.xml .",
        "cp -r packaging/linux/codes.merritt.FeelingFinder.desktop .",
        "cp -r assets/images/icon.svg .",
        "cp -r packaging/linux/flatpak/build-flatpak.sh .",
        "./build-flatpak.sh"
      ],
      "sources": [
        {
          "type": "file",
