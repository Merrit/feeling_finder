<component type="desktop-application">
  <id>codes.merritt.FeelingFinder</id>
  <name>Feeling Finder</name>
  <summary>A fast and beautiful emoji picker</summary>
  <developer_name>Merritt Codes</developer_name>
  <url type="homepage">https://github.com/Merrit/feeling_finder</url>
